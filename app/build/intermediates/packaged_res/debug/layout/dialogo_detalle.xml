<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvinfo"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Infomacion"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/tvnombrepaciente"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="dfdfdfdfd"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/tvapellidopaciente"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="dfdfdfdfd"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>


            <TextView
                android:id="@+id/tvapoderado"
                android:textSize="18sp"

                android:text="dfdfdfdfd"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <Button
                android:id="@+id/idbtncerrardialogo"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:background="@drawable/borde_uno"
                android:text="Cerrar"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_marginBottom="30dp"
                android:layout_height="40dp">

            </Button>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>