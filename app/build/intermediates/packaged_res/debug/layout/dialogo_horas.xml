<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/idestado"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Agregar hora"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <LinearLayout
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnhora1"
                    android:alpha="0.7"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/textPreDate"
                    android:layout_width="130dp"
                    android:drawableEnd="@drawable/ic_hora"
                    android:layout_height="wrap_content">
                </Button>

                <Button
                    android:id="@+id/btnhora2"
                    android:alpha="0.7"
                    android:layout_marginLeft="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/textPreDate"
                    android:layout_width="130dp"
                    android:drawableEnd="@drawable/ic_hora"
                    android:layout_height="wrap_content">
                </Button>

            </LinearLayout>

            <Button
                android:id="@+id/btngurdarhora"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:background="@drawable/borde_uno"
                android:text="Guardar"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_marginBottom="30dp"
                android:layout_height="40dp">
            </Button>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>