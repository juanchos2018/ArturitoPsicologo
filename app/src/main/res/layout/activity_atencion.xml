<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_color"
    android:layout_height="match_parent"

    tools:context=".View.AtencionActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgAzul"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:titleTextColor="@color/white"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imgfinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_finish" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="Figura"
                android:textColor="@color/white"
                android:textSize="20sp">
            </TextView>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="450dp">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView

            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:text="Seleccione Figura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgciruclo"
                android:layout_marginRight="10dp"
                android:src="@drawable/circuloapp"
                android:layout_width="80dp"
                android:layout_height="80dp">
            </ImageView>
            <ImageView
                android:id="@+id/imgrectagulo"
                android:layout_marginRight="10dp"
                android:src="@drawable/rectaguloapp"
                android:layout_width="80dp"
                android:layout_height="80dp">
            </ImageView>
            <ImageView
                android:id="@+id/imgcuadrado"
                android:src="@drawable/cuadradoapp"
                android:layout_width="80dp"
                android:layout_height="80dp">
            </ImageView>
        </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgtriangulo"
                    android:src="@drawable/trianguloapp"
                    android:layout_width="80dp"
                    android:layout_height="80dp">
                </ImageView>

                <ImageView
                    android:id="@+id/imgrombo"
                    android:src="@drawable/romboapp"
                    android:layout_width="80dp"
                    android:layout_height="80dp">
                </ImageView>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <Button
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:id="@+id/btnsiguiente"
        android:text="Soguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </Button>
    </LinearLayout>
</LinearLayout>