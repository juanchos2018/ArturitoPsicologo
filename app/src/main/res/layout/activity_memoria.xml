<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:background="@drawable/bg_color"
    android:layout_height="match_parent"
    tools:context=".View.MemoriaActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgAzul"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:titleTextColor="@color/white"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imgfinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_finish" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="Figura"
                android:textColor="@color/white"
                android:textSize="20sp">
            </TextView>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="450dp">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView

                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:text="Seleccione 3 Figuras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgluna"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/luna"
                        android:layout_width="80dp"
                        android:layout_height="80dp">
                    </ImageView>
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/imgcheck1"
                        android:src="@drawable/checkimg"
                        android:layout_width="70dp"
                        android:layout_height="70dp">
                    </ImageView>
                </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgflobo"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/globos"
                    android:layout_width="80dp"
                    android:layout_height="80dp">
                </ImageView>

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/imgcheck2"
                    android:src="@drawable/checkimg"
                    android:layout_width="70dp"
                    android:layout_height="70dp">
                </ImageView>
            </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgtele"
                        android:src="@drawable/televisor"
                        android:layout_width="80dp"
                        android:layout_height="80dp">
                    </ImageView>
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/imgcheck3"
                        android:src="@drawable/checkimg"
                        android:layout_width="70dp"
                        android:layout_height="70dp">
                    </ImageView>
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/imgpelota"
                        android:src="@drawable/pelota"
                        android:layout_width="80dp"
                        android:layout_height="80dp">
                    </ImageView>
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/imgcheck4"
                        android:src="@drawable/checkimg"
                        android:layout_width="80dp"
                        android:layout_height="80dp">
                    </ImageView>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imglapÃ­z"
                        android:src="@drawable/lapiz"
                        android:layout_width="80dp"
                        android:layout_height="80dp">
                    </ImageView>

                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/imgcheck5"
                        android:src="@drawable/checkimg"
                        android:layout_width="70dp"
                        android:layout_height="70dp">
                    </ImageView>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgperro"
                        android:src="@drawable/perro"
                        android:layout_width="80dp"
                        android:layout_height="80dp">
                    </ImageView>
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/imgcheck6"
                        android:src="@drawable/checkimg"
                        android:layout_width="70dp"
                        android:layout_height="70dp">
                    </ImageView>

                </FrameLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <FrameLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgbici"
                        android:src="@drawable/bici"
                        android:layout_width="80dp"
                        android:layout_height="80dp">
                    </ImageView>
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/imgcheck7"
                        android:src="@drawable/checkimg"
                        android:layout_width="70dp"
                        android:layout_height="70dp">
                    </ImageView>


                </FrameLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/imgcasa"
                        android:src="@drawable/casa"
                        android:layout_width="80dp"
                        android:layout_height="80dp">
                    </ImageView>

                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/imgcheck8"
                        android:src="@drawable/checkimg"
                        android:layout_width="70dp"
                        android:layout_height="70dp">
                    </ImageView>

                </FrameLayout>


            </LinearLayout>
            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/btnlimpiar"
                android:text="limpiar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></Button>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <Button
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:id="@+id/btnsiguiente"
        android:text="Siguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </Button>
    </LinearLayout>
</LinearLayout>