<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_color"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_marginTop="30dp"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView

                    android:layout_marginLeft="20dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:gravity="center_horizontal|center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:layout_marginTop="20dp"
                            android:gravity="center_horizontal"
                            android:text="Crea una Cuenta aqui"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_marginTop="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <EditText
                                android:id="@+id/tvnombre"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textEmailAddress"
                                android:hint="Nombre"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <EditText
                                android:id="@+id/tvapellido"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textEmailAddress"
                                android:hint="Apellido"
                                />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <EditText
                                android:id="@+id/tvcorreo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textEmailAddress"
                                android:hint="Correo"
                                />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <EditText
                                android:id="@+id/tvclave"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textEmailAddress"
                                android:hint="ContraseÃ±a"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <Button
                            android:id="@+id/btnregistrarusu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/loginPass"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/white"
                            android:background="@drawable/bode_uno"
                            android:text="crear una cuenta"
                            android:textSize="17sp"
                            android:textStyle="bold" />
                        <Button
                            android:id="@+id/btncancelar"
                            android:background="@drawable/borde_tres"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/red"
                            android:layout_marginRight="20dp"
                            android:text="cancelar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </Button>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logopisco"
                android:scaleType="fitCenter"
                android:layout_marginBottom="20dp"
                android:layout_height="200px"
                android:layout_width="200px"/>

        </FrameLayout>

    </ScrollView>


</LinearLayout>